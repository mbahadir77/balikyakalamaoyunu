<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kirmizibalikzorluk">

    <Button
        android:id="@+id/buttonkirmizikolay"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_marginTop="202dp"
        android:layout_marginBottom="52dp"
        android:onClick="kirmizikolay"
        android:text="KOLAY"
        app:layout_constraintBottom_toTopOf="@+id/buttonkirmiziorta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonkirmizizor"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_marginBottom="212dp"
        android:onClick="kirmizizor"
        android:text="ZOR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonkirmiziorta" />

    <Button
        android:id="@+id/buttonkirmiziorta"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_marginBottom="94dp"
        android:onClick="kirmiziorta"
        android:text="ORTA"
        app:layout_constraintBottom_toTopOf="@+id/buttonkirmizizor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonkirmizikolay" />
</androidx.constraintlayout.widget.ConstraintLayout>
