<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mavibalikzorluk">

    <Button
        android:id="@+id/buttonkolay"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_marginTop="136dp"
        android:layout_marginBottom="87dp"
        android:onClick="kolay"
        android:text="KOLAY"
        app:layout_constraintBottom_toTopOf="@+id/buttonorta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonzor"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_marginBottom="242dp"
        android:onClick="zor"
        android:text="ZOR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonorta" />

    <Button
        android:id="@+id/buttonorta"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_marginBottom="65dp"
        android:onClick="orta"
        android:text="ORTA"
        app:layout_constraintBottom_toTopOf="@+id/buttonzor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonkolay" />

</androidx.constraintlayout.widget.ConstraintLayout>